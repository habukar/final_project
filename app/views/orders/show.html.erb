<h1> Order Summary</h1>
<p>
<strong> Name: </strong>
<%= @order.name %>
</p>

<strong> Order: </strong>
<%= @order.request %>
</p>
<h2> Reviews</h2>
<% @order.reviews.each do |review| %>
<p>
    <strong> Reviewer:</strong>
    <%= review.reviewer %>
    
</p>
<p>
    <strong> Review:</strong>
    <%= review.body %>
    
</p>
<% end %>
<h2> Add a review:</h2>
<%= form_for([@order, @order.reviews.build]) do |f| %>
  <p>
    <%= f.label :reviewer %><br>
    <%= f.text_field :reviewer %>
  </p>
 
  <p>
    <%= f.label :body%><br>
    <%= f.text_area :body%>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
<%= link_to 'Order List', orders_path %>

